@*Using the _IndividialButtonPartial to make a group of three buttons*@

@model SammysAuto.Models.IndividualButtonPartial

    <td style="width:150px;">
        <div class="btn-group" role="group">
            @*Edit button*@
            @Html.Partial("_IndividualButtonPartial",
          new IndividualButtonPartial
          {
              Action = "Edit",
              ButtonType = "btn-primary",
              Glyph = "pencil",
              Text = "Edit",
              ServiceId = Model.ServiceId
          }
      )

            @*Details button*@
            @Html.Partial("_IndividualButtonPartial",
          new IndividualButtonPartial
          {
              Action = "Details",
              ButtonType = "btn-success",
              Glyph = "list",
              Text = "Details",
              ServiceId = Model.ServiceId
          }
      )

            @*Delete button*@
            @Html.Partial("_IndividualButtonPartial",
             new IndividualButtonPartial
             {
                 Action = "Edit",
                 ButtonType = "btn-danger",
                 Glyph = "trash",
                 Text = "Delete",
                 ServiceId = Model.ServiceId
             }
         )
        </div>
    </td>